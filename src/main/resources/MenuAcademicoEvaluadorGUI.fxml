<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="GUI.ControladorMenuAcademicoEvaluadorGUI"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #e6f7ff, #ffffff); -fx-padding: 40;">

   <!-- Título principal -->
   <Text text="Panel del Evaluador"
         style="-fx-fill: #2c3e50; -fx-font-weight: bold;">
      <font>
         <Font name="System Bold" size="28.0" />
      </font>
   </Text>

   <!-- Línea decorativa -->
   <Text text="_________________________"
         style="-fx-fill: #3498db; -fx-font-weight: bold;">
      <font>
         <Font size="24.0" />
      </font>
   </Text>

   <!-- Espaciador -->
   <Text text="" />

   <!-- Botón principal -->
   <Button text="Consultar Evaluaciones"
           onAction="#abrirConsultarEstudiantesAEvaluar"
           style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 15px 30px; -fx-background-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1);">
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
   </Button>

   <!-- Texto institucional -->
   <Text text="Sistema Académico"
         style="-fx-fill: #7f8c8d;">
      <font>
         <Font size="12.0" />
      </font>
      <VBox.margin>
         <Insets top="40.0" />
      </VBox.margin>
   </Text>
</VBox>